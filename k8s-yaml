#Rolling Update .yaml 
apiVersion: apps/v1
kind: Deployment
metadata: 
  name: sujith-Deployment
  labels: 
    app: sd
spec:
  replicas: 3
  strategy:
    type: RollingUpdate
    rollingupdate:
      maxUnavailable: 1
      maxSurge: 1
  selector:
    matchLabels:
      app: pod-template-1    
  template: 
    metadata:
      labels: 
        app: pod-template-1
    spec: 
      containers:
      - name: c56
      image: nginx
      ports: 
        containerPorts: 80    
------------------------------------------------------------
#service.yaml

apiVersion: v1
kind: Service
metadata: 
  name: sujith-service
spec: 
  selector:
    app: sujith-pod 
  ports:
  #container port
  - targetPort: 80
  # service port
    port: 80
    name: my-svc-port
    protocol: TCP
  type: NodePort 
  ----------------------
apiVersion: v1
kind: Service
metadata: 
  name: clusterip-service
spec:
  selector:
    app: python-app # must be given here pod info
  ports: 
  - targetPort: 8080
    port: 80
    name: svc-port
    protocol: TCP
  type: ClusterIP   
