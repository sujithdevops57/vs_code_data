apiVersion: v1
kind: pod
metadata: 
  name: sujith-pod
  labels: 
    app: backend
spec: 
  containers: 
  - name: c1
    image: nginx
    ports: 
    - containerPort: 8080

    ---------------------------------------
apiVersion: apps/v1
kind: ReplicaSet
metadata:
  name: sujith-replica
  labels:
    app: backend 
spec:
  replicas: 3
  selector: 
    matchLabels: 
      app: backend
  template: #pod template
    metadata: 
      labels: 
        app: backend
    spec: 
      containers: 
      - name: c1
        image: nginx
        ports: 
        - containerPort: 80 
---------------------------------------------
